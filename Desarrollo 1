  <script>
    const form = document.getElementById('silosForm');
    const submitBtn = document.getElementById('submitBtn');
    const resetBtn = document.getElementById('resetBtn');

    function validateForm() {
      let allValid = true;
      const inputs = form.querySelectorAll('input[required][data-max]');
      const selects = form.querySelectorAll('select');

      inputs.forEach(input => {
        const max = parseFloat(input.dataset.max);
        const value = parseFloat(input.value.replace(',', '.'));
        if (isNaN(value) || value > max) {
          input.classList.add('error');
          allValid = false;
        } else {
          input.classList.remove('error');
        }
      });

      selects.forEach(select => {
        if (select.value === "") {
          allValid = false;
        }
      });

      submitBtn.disabled = !allValid;
    }

    form.addEventListener('input', validateForm);

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      alert('✅ Datos validados y capturados correctamente. Aquí luego se enviarán al Google Apps Script.');
    });

    resetBtn.addEventListener('click', () => {
      form.reset();
      submitBtn.disabled = true;
      form.querySelectorAll('input').forEach(input => input.classList.remove('error'));
    });
  </script>

